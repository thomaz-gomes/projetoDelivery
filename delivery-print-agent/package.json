{
  "name": "delivery-print-agent",
  "version": "1.0.0",
  "description": "Local print agent for delivery SaaS - listens to backend via WebSocket and prints orders",
  "main": "index.js",
  "type": "commonjs",
  "scripts": {
    "start": "node index.js",
    "dev": "node index.js",
    "detect-printer": "node detect-printer.js",
    "build": "pkg . --targets node18-win-x64 --output dist/delivery-print-agent.exe"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "mkdirp": "^1.0.4",
    "node-thermal-printer": "^3.0.0",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "pkg": "^5.8.1"
  },
  "pkg": {
    "assets": [
      "defaultTemplate.js",
      "templateEngine.js"
    ],
    "targets": [
      "node18-win-x64"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
