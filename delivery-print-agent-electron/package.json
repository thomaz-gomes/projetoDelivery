{
  "name": "delivery-print-agent",
  "version": "2.0.0",
  "description": "Agente de Impressão Térmica para Sistema de Delivery",
  "main": "main.js",
  "author": "Delivery SaaS",
  "license": "ISC",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "build": "electron-builder --win",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "iconv-lite": "^0.6.3",
    "serialport": "^12.0.0",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.delivery.printagent",
    "productName": "Delivery Print Agent",
    "copyright": "Copyright © 2026 Delivery SaaS",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "src/**/*",
      "renderer/**/*",
      "assets/**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,readme.md,test,__tests__}",
      "!node_modules/.cache/**"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Delivery Print Agent",
      "runAfterFinish": true
    },
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets/"
      }
    ]
  }
}
