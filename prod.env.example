# Example production .env (DO NOT COMMIT SECRETS)
# Copy this file to /path/to/deploy/.env on the server and fill values there.

# === Images (set by CI or manually) ===
BACKEND_IMAGE=ghcr.io/OWNER/projetodelivery-backend:latest
FRONTEND_IMAGE=ghcr.io/OWNER/projetodelivery-frontend:latest

# === Server / app ===
PORT=3000
HOST=example.com
NODE_ENV=production

# === Database (Postgres recommended in production) ===
# Example: postgres://user:password@db:5432/dbname
DATABASE_URL=postgres://app:changeme@db:5432/appdb
POSTGRES_USER=app
POSTGRES_PASSWORD=changeme
POSTGRES_DB=appdb

# === Authentication / secrets ===
JWT_SECRET=change-me-to-a-secure-random-value

# === Public URLs ===
PUBLIC_FRONTEND_URL=https://app.example.com
FRONTEND_ORIGIN=https://app.example.com

# === iFood integration ===
IFOOD_BASE_URL=https://merchant-api.ifood.com.br
IFOOD_AUTH_BASE=https://merchant-api.ifood.com.br/authentication/v1.0
IFOOD_USER_CODE_PATH=/oauth/userCode
IFOOD_TOKEN_PATH=/oauth/token
IFOOD_VERIFICATION_URL_DEFAULT=https://portal.ifood.com.br/apps/code

IFOOD_CLIENT_ID=9d445b48-c771-43cf-806c-72a4d96a37fa
IFOOD_CLIENT_SECRET=i85ce3o3gs2mkh0kcnnretqeprb8wevlyohcca72bj8axbb1jyat0b4iyc7by0d60gwleapocdfeimpwu42xayxdrbk06vv9nby
IFOOD_MERCHANT_ID=
IFOOD_WEBHOOK_SECRET=

# When deploying via install/update, enable auto-print by default
ENABLE_AUTO_PRINT=1

IFOOD_POLL_INTERVAL_MS=30000
IFOOD_POLL_MAX_CONCURRENCY=3

# === Evolution / WhatsApp API ===
EVOLUTION_API_BASE_URL=
EVOLUTION_API_API_KEY=
# Enable sending WhatsApp messages for iFood events (true|1 to enable)
ENABLE_IFOOD_WHATSAPP_NOTIFICATIONS=false

# === SSL (paths on the host where docker-compose will run) ===
# If set, the server will prefer these explicit files. Otherwise it will search in ./ssl
SSL_KEY_PATH=
SSL_CERT_PATH=
SSL_CA_PATH=

# === Certificate store encryption key (base64 or hex) ===
# Required for encrypting certificate passwords in the app
CERT_STORE_KEY=

# === OpenAI / AI parser (optional) ===
OPENAI_API_KEY=
USE_AI_PARSER=false

# === Printing (optional) ===
PRINTER_INTERFACE=
PRINTER_TYPE=EPSON
PRINTER_WIDTH=48

# === Misc / debug ===
DEBUG_WEBHOOK=0

# === Ports mapping override (optional) ===
BACKEND_PORT=3000
FRONTEND_PORT=80
